{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "make builder debug",
			"command": "make",
			"args": [
				"DEBUG=1",
				"builder"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}